<div class="item">
    <div>
        URL do Avatar
    </div>
    <div>
        <input 
            type="url"
            name="avatar_url"
            placeholder="https://"
            value="{{ student.avatar_url }}">
    </div>
</div>

<div class="item">
    <div>
        Nome completo
    </div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Insira seu nome"
            value="{{ student.name }}">
    </div>
</div>

<div class="item">
    <div>
        Data de Nascimento
    </div>
    <div>
        <input 
            type="date"
            name="birth_date"
            value="{{ student.birth_date }}"
            >
    </div>
</div>

<div class="item">
    <div>
        Email
    </div>
    <div>
        <input 
            type="email"
            name="email"
            placeholder="seuemail@seuemail.com"
            value="{{ student.email }}">
    </div>
</div>

<div class="item">
    <div>
        Ano Escolar
    </div>
    <div>
        <select name="scholar_year">
            <option value="5ef"
                    {% if student.scholar_year == "5ef" %}
                        selected
                    {% endif %}
                    >
                        5º ano do Ensino Fundamental
            </option>

            <option value="6ef"
                    {% if student.scholar_year == "6ef" %}
                        selected
                    {% endif %}
                    >
                        6º ano do Ensino Fundamental
            </option>
            <option value="7ef"
                    {% if student.scholar_year == "7ef" %}
                        selected
                    {% endif %}
                    >
                        7º ano do Ensino Fundamental
            </option>
            <option value="8ef"
                    {% if student.scholar_year == "8ef" %}
                        selected
                    {% endif %}
                    >
                        8º ano do Ensino Fundamental
            </option>
            <option value="9ef"
                    {% if student.scholar_year == "9ef" %}
                        selected
                    {% endif %}
                    >
                        9º ano do Ensino Fundamental
            </option>
            <option value="1em"
                    {% if student.scholar_year == "1em" %}
                        selected
                    {% endif %}
                    >
                        1º ano do Ensino Médio
            </option>
            <option value="2em"
                    {% if student.scholar_year == "2em" %}
                        selected
                    {% endif %}
                    >
                        2º ano do Ensino Médio
            </option>
            <option value="3em"
                    {% if student.scholar_year == "3em" %}
                        selected
                    {% endif %}
                    >
                        3º ano do Ensino Médio
            </option>

        </select>
    </div>
</div>

<div class="item">
    <div>
        Carga horária semanal (em h)
    </div>
    <div>
        <input 
            type="number"
            name="workload"
            placeholder="Quantas horas o aluno precisa?"
            value = "{{ student.workload }}">
    </div>
</div>

<button type="submit">Salvar</button>


    

