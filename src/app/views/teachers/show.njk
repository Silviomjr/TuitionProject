{% extends 'layout.njk'%}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url('{{teacher.avatar_url}}') no-repeat center center / cover;"></section>
        <section class="informations">
            
            <div class="item">
                <div>Nome</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.birth_date}} anos</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{teacher.education_level}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{"Presencial" if teacher.class_type == "P" else "À Distância"}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for subject in teacher.subjects_taught %}
                        <span>{{subject}}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.created_at}}</div>
            </div>

            <button><a href="/teachers/{{ teacher.id }}/edit">Editar</a></button>

            
        </section>
    </div>

{% endblock %}