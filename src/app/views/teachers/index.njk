{% extends "layout.njk" %}

{% block content %}
    <div class="card table-container">
        <a href="/teachers/create">Novo Professor</a>

        <table>
            <thead>
                <th>Nome completo</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </thead>

            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <div>
                                <span class="mini-icon" style="background-image: url({{teacher.avatar_url}})"></span>
                                {{teacher.name}}
                            </div>
                        </td>
                        <td>
                            {% for subject in teacher.subjects_taught%}
                                <span class="index-subjects">{{subject}}</span>
                            {% endfor %}
                        </td>
                        <td class="index-link">
                            <a href="/teachers/{{teacher.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}