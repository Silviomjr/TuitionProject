{% extends 'layout.njk'%}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url('{{student.avatar_url}}') no-repeat center center / cover;"></section>
        <section class="informations">
            
            <div class="item">
                <div>Nome</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Aniversário</div>
                <div>{{student.birthday}} </div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>Ano escolar</div>
                <div>{{student.scholar_year}}</div>
            </div>

            <div class="item">
                <div>Carga horária semanal</div>
                <div>{{student.workload}}h</div>
            </div>

            <button><a href="/students/{{student.id}}/edit">Editar</a></button>

            
        </section>
    </div>

{% endblock %}